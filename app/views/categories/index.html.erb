<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= link_to category.name, category_path(category) %>
  <% end %>
</div>

<% if user_signed_in? && current_user.role == 'admin'%>
<%= link_to "New category", new_category_path %>
<% end%>
