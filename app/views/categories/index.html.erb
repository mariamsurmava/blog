<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= link_to category.name, category_path(category) if category.approved == true%>
  <% end %>
</div>

<% if user_signed_in? && current_user.role == 'admin'%>
  <%= link_to t("New category"), new_category_path %>
  <p><%= "waiting for approval"%>:<p>
  <%=render partial: 'unapproved'%>
<% elsif user_signed_in? %>
<%= link_to t("Category request"), new_category_path %>
<% end%>


