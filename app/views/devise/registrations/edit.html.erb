
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <img src = "<%= @user.avatar %>", style="width: 150px; ">

  <div class="field">
    <%= f.label t(:username) %><br />
    <%= f.text_field :user_name, autofocus: true, class: "form-control" %>
  </div>  

  <div class="field">
    <%= f.label t(:email) %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: t("email") %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="field">
      <%= f.label t(:avatar) %><br />
      <%= f.file_field :avatar, class: "form-control" %>
    </div>  

  <div class="field">
    <%= f.label t(:password) %> <i><%= t("leave blank if you don't want to change it")%></i><br />
    <%= f.password_field :password, autocomplete: t("new-password"), class: "form-control", placeholder:  "#{@minimum_password_length} #{t("characters minimum")}" %>
    <% if @minimum_password_length %>
    <br>
      <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t('repeat the password')%>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t("we need your current password to confirm your changes")%>
)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t("Update"), :class => "btn btn-primary" %>
  </div>
<% end %>
<br>

<h4><%= t("Unhappy? Cancel your account")%></h4>

<p> <%= button_to t("Cancel my account"), registration_path(resource_name), form: {data: {turbo_confirm: 'Are you sure?'}}, method: :delete, :class => "btn btn-secondary" %></p>

<%= link_to t("Back"), :back, {:class => "btn btn-secondary"} %>


