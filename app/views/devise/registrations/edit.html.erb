
<h2> <%= resource_name.to_s.humanize %></h2>
<section class="forms">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label t(:email) %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: t("email") %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label t(:password) %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: t("new-password"), class: "form-control", placeholder:  "#{@minimum_password_length} characters minimum" %>
    <% if @minimum_password_length %>
    <br>
      <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: 'repeat the password'%>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t("Update"), :class => "btn btn-primary" %>
  </div>
<% end %>
<br>
<h4>Unhappy? Cancel your account</h4>

<p> <%= button_to t("Cancel my account"), registration_path(resource_name), data: { turbo_confirm: "Are you sure?" }, method: :delete, :class => "btn btn-secondary" %></p>

<%= link_to t("Back"), :back, {:class => "btn btn-secondary"} %>

</section>

