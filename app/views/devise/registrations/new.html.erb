<section class="forms" >
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false} } ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <br>
  <br>

  <div class="container h-100 ">


  <p ><%=t("Sign up")%></p>


  <form>

    <div class="field">
      <%= f.label t(:username) %><br />
      <%= f.text_field :user_name, autofocus: true, class: "form-control" %>
    </div>   

    <div class="field">
      <%= f.label t(:email) %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: t("email"), class: "form-control" %>
    </div> 

  
    <div class="field">
      <%= f.label t(:password) %>
      <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> <%=t("characters minimum")%></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: t("new-password"), class: "form-control" %>
    </div>

    
    <div class="field">
      <%= f.label t(:"password confirmation")%> <br/>
      <%= f.password_field :password_confirmation, autocomplete: t("new-password"), class: "form-control"%>
    </div>

  
    <div class="actions">
      <%= f.submit t("Sign up"), :class => "btn btn-dark" %>
    </div>
  </form>

  <% end %>
 </div>
 </section>