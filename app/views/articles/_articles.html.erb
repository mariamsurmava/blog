    <table >
       <thead>
    <tr>
      <th scope="col">article</th>
      </tr> 
      </thead>
      <% @articles.each do |article| %>
    <% unless article.archived? || (article.private? && article.user != current_user) %>    
      <tbody class='article'>
      <td><%= link_to article.title, article %></td>
      <td>by: <%= link_to article.user.email, user_path(article.user)%></td>
       </tr>
        <tr>
       <td><%= article.body.split(" ").first(30).join(" ")%></td>
      </tr>
      </tbody>
    <% if user_signed_in? && current_user == article.user %>

<div class='blogeddit'>
  <%= link_to "Edit", edit_article_path(article) %> <%= link_to "Destroy", article_path(article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
                  </div>
<%end%>  
  <% end %>

  <% end %> 
      </table>

    <div class="digg_pagination center">
    
<%= will_paginate @articles%>
</div>