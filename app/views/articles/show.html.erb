<h1><%= @article.title %></h1>

<p class='article'><%= @article.body %></p>
<% if user_signed_in? && current_user == @article.user %>
<div class='blogeddit'>
  <p><%= link_to "Edit", edit_article_path(@article) %></p>
  <p><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></p>
                  </div>
<%end%>

<h2>Comments</h2>
<%= render @article.comments %>

<%if user_signed_in?%>
<h2 class='addcomment'>Add a comment:</h2>
<%= render 'comments/form' %>
<%end%>
