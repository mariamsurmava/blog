<%= form_with model: [@user, @phone] do |form| %>
  <% if phone.errors.any? %>
    <div style="color: red">
      <h2><%= I18n.locale == :en ? pluralize(phone.errors.count, "error") : "#{phone.errors.count} შეცდომის გამო"%> <%= t("prohibited this phone from being saved")%>:</h2>

      <ul>
        <% phone.errors.each do |error| %>
          <li><%= t(error.full_message) %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.country_select :country %>
  </div>

  <div>
    <%= form.submit :class => "btn btn-dark" %>
  </div>
<% end %>
