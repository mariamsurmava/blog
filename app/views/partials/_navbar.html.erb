          <%= link_to "home",
        root_path, class:"nav-item" %>
        </li>

        <li class="nav-item">
          <%= link_to "blogs",
        root_path, class:"nav-item" %>
        </li>

        <li class="nav-item">
          <%= link_to "log_out",
        destroy_user_session_url, method: :delete, class:"nav-item" %>
        </li>
       </ul>
       <% else %>
       <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "home",
        root_path, class:"nav-item" %>
        </li>

        <li class="nav-item">
          <%= link_to "blogs",
        root_path, class:"nav-item" %>
