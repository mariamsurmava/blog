  </div>
  <%else%>
  <div>
    <h1 class="font-black text-3xl mb-3 text-center">you have not payed yet, <%= @customer.user_name %>!</h1>
  <%= link_to t("subscribe"),
              pricing_path, class:"nav-link text-danger" %>
          </li>
          </div>
  <%end%>
<%else%>
  <div>
    <h1 class="font-black text-3xl mb-3 text-center">you need to sign in first!</h1>
    <%= link_to t("sign in"),
  new_user_session_path, class:"nav-link text-light" %>

    <%= link_to t("sign up"),
  new_user_registration_path, class:"nav-link text-light " %>    
  </div>
<%end%>